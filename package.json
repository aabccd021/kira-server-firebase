{
  "name": "kira-server-firebase",
  "version": "0.1.1",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": "git@github.com:aabccd021/kira-core-firebase.git",
  "author": "aabccd021 <aabccd021@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": "12"
  },
  "scripts": {
    "build": "tsc",
    "coverage": "yarn test --coverage",
    "lint": "eslint ./ --ext ts",
    "logs": "firebase functions:log",
    "serve": "yarn build && firebase emulators:start --only functions",
    "shell": "yarn build && firebase functions:shell",
    "start": "yarn shell",
    "functions:install": "cd functions && yarn install",
    "functions:update-dep": "yarn build && rm -rf functions/node_modules/kira-server-firebase && cp -r lib functions/node_modules/kira-server-firebase",
    "test": "yarn test:functions",
    "test:functions": "yarn functions:update-dep && cd functions && yarn test"
  },
  "dependencies": {
    "assert-never": "^1.2.1",
    "firebase-admin": "^9.6.0",
    "firebase-functions": "^3.13.2",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@firebase/testing": "^0.20.11",
    "@types/jest": "^26.0.23",
    "@types/lodash": "^4.14.168",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-lodash": "^7.1.0",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-only-warn": "^1.0.2",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-ts-immutable": "^0.3.0",
    "eslint-plugin-unused-imports": "^1.0.1",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.5",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "eslintConfig": {
    "ignorePatterns": [
      "**/*.js"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "filenames",
      "import",
      "lodash",
      "no-null",
      "only-warn",
      "simple-import-sort",
      "ts-immutable",
      "unused-imports"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:import/typescript",
      "plugin:lodash/recommended",
      "plugin:prettier/recommended",
      "plugin:ts-immutable/recommended",
      "prettier"
    ],
    "overrides": [
      {
        "files": [
          "test/**/*.test.ts"
        ],
        "rules": {
          "ts-immutable/no-let": "off"
        }
      }
    ],
    "rules": {
      "curly": [
        "warn",
        "multi-line"
      ],
      "eqeqeq": "warn",
      "max-len": [
        "warn",
        {
          "code": 100,
          "comments": 100,
          "ignoreStrings": true,
          "ignoreTemplateLiterals": true
        }
      ],
      "max-params": [
        "warn",
        3
      ],
      "no-unused-expressions": "off",
      "@typescript-eslint/no-unused-vars": "off",
      "import/no-cycle": "warn",
      "lodash/chaining": [
        "warn",
        "always"
      ],
      "lodash/import-scope": [
        "warn",
        "member"
      ],
      "no-null/no-null": "warn",
      "prettier/prettier": [
        "warn",
        {
          "singleQuote": true,
          "printWidth": 100
        }
      ],
      "simple-import-sort/exports": "warn",
      "simple-import-sort/imports": "warn",
      "ts-immutable/prefer-readonly-types": "off",
      "unused-imports/no-unused-imports-ts": "warn"
    }
  }
}