{
  "name": "kira-firebase",
  "version": "0.1.0",
  "repository": "git@github.com:aabccd021/kira-server-firebase.git",
  "author": "aabccd021 <aabccd021@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": "12"
  },
  "files": [
    "server"
  ],
  "scripts": {
    "build": "tsc",
    "coverage": "yarn test --coverage",
    "lint": "eslint . --ext ts",
    "functions:install": "cd functions && yarn install",
    "functions:update-dep": "yarn build && rm -rf functions/node_modules/kira-firebase && mkdir -p functions/node_modules/kira-firebase/server && cp -r server functions/node_modules/kira-firebase",
    "test": "yarn test:functions",
    "test:functions": "yarn functions:update-dep && cd functions && yarn test"
  },
  "dependencies": {
    "assert-never": "^1.2.1",
    "firebase-admin": "^9.6.0",
    "firebase-functions": "^3.13.2",
    "kira-nosql": "^0.1.7",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/lodash": "^4.14.168",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-functional": "^3.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-only-warn": "^1.0.2",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-unused-imports": "^1.0.1",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.5",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "filenames",
      "functional",
      "import",
      "no-null",
      "only-warn",
      "simple-import-sort",
      "unused-imports"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:functional/all",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:import/typescript",
      "plugin:prettier/recommended",
      "prettier"
    ],
    "ignorePatterns": [
      "**/*.d.ts",
      "/functions"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": "off",
      "eqeqeq": "warn",
      "functional/no-conditional-statement": "off",
      "functional/no-expression-statement": "off",
      "import/no-cycle": "warn",
      "no-null/no-null": "warn",
      "no-unused-expressions": "off",
      "simple-import-sort/exports": "warn",
      "simple-import-sort/imports": "warn",
      "unused-imports/no-unused-imports-ts": "warn",
      "max-len": [
        "warn",
        {
          "code": 100,
          "comments": 100,
          "ignoreStrings": true,
          "ignoreTemplateLiterals": true
        }
      ],
      "max-params": [
        "warn",
        3
      ],
      "prettier/prettier": [
        "warn",
        {
          "singleQuote": true,
          "printWidth": 100
        }
      ]
    }
  }
}
